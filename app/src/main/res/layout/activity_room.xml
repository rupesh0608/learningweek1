<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firebase.ChatApplication.RoomActivity">
    <ListView
        android:id="@+id/roomListView"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:padding="10dp">

        <EditText
            android:id="@+id/edtRoomTextBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/grey_corner_radius_box"
            android:hint="Enter Room Name..."
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="#9DA3AE"
            android:autofillHints="" />

        <ImageView
            android:id="@+id/btnAddRoom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_add_grey" />
    </LinearLayout>

</RelativeLayout>